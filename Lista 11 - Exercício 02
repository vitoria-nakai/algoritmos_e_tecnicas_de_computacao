/*
Faça uma função para arredondar valor para dada casas. Se casas não for 
fornecido, arredonde para 0 casas decimais (casas = 0).
*/

#include <stdio.h>
#include <math.h>

double arredondar(double num, int qtd){
    if(qtd == 0) return num;
    double multiplicador = pow(10, qtd);
    return floor(num * multiplicador) / multiplicador;
}

int main(){
    double num;
    int qtd;
    printf("Para arredondar para dada casas decimais, digite o numero: ");
    scanf("%lf", &num);
    printf("Digite a quantidade de casas decimais: ");
    scanf("%d", &qtd);
    printf("Arredondando fica %f", arredondar(num, qtd));
    return 0;
}
